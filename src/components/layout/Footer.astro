import { siteConfig } from "@/site-config"
import { getLocalizedResumeConfig, getI18nText, getCurrentLocale } from '@/utils/locale'

const currentLocale = getCurrentLocale(Astro.url)
const currentSiteConfig = siteConfig[currentLocale]
const resumeConfig = getLocalizedResumeConfig(currentLocale)

// 获取北京时间并格式化为国际标准格式
let now = new Date().toLocaleString('zh-CN', { 
    timeZone: 'Asia/Shanghai'
}).replace(/(\d{4})\/(\d{1,2})\/(\d{1,2})/, '$1-$2-$3') + ' (UTC+8)'
let year = now.slice(0, 4)
---

<footer class='mx-auto mt-12 w-full'>
	<div class='border-t border-border pt-5'>
		<div
			class='flex flex-col items-center gap-y-3 sm:flex sm:flex-row sm:items-center sm:justify-between sm:gap-y-0'
		>
			<div class='flex gap-x-4 text-sm'>
				<p class=''>{getI18nText('footer.copyright', currentLocale)} © {year==currentSiteConfig.year?year:currentSiteConfig.year+"-"+year} {resumeConfig.name}</p>
			</div>
			<p>{getI18nText('footer.lastUpdated', currentLocale)}: {now}</p>
		</div>
	</div>
</footer>
