---
import type { HTMLAttributes } from 'astro/types'
import type { Locale } from '@/types'

import { getFormattedDate } from '@/utils'
import { getCurrentLocale } from '@/utils/locale'

type Props = HTMLAttributes<'time'> & {
	date: Date
	dateTimeOptions?: Intl.DateTimeFormatOptions
	locale?: Locale
}

const { date, dateTimeOptions, locale, ...attrs } = Astro.props

const currentLocale = locale || getCurrentLocale(Astro.url)
const postDate = getFormattedDate(date, dateTimeOptions, currentLocale)
---

<time datetime={date.toISOString()} {...attrs}>
	{postDate}
</time>
