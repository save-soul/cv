{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"strictNullChecks": true,
		"allowJs": true,
		"baseUrl": ".",
		"lib": ["es2022", "dom", "dom.iterable"],
		"paths": {
			"@/assets/*": ["src/assets/*"],
			"@/components/*": ["src/components/*"],
			"@/layouts/*": ["src/layouts/*"],
			"@/utils": ["src/utils/index.ts"],
			"@/utils/*": ["src/utils/*"],
			"@/types": ["src/types.ts"],
			"@/config": ["src/config/index.ts"],
			"@/i18n": ["src/i18n.ts"]
		}
	},
	"exclude": ["node_modules", "**/node_modules/*", ".vscode", "dist"]
}
